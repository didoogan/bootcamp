<% include ./partials/header.ejs %>

    <div class="ui main text container segment">
        <div class="ui huge header"><%= post.title %></div>
            <div class="ui top attached">
                <div class="item">
                   <img class="ui centered rounded image" src="<%= post.image %>"
                   <div class="content">
                       <span><%= post.created.toDateString() %></span>
                   </div>
                   <div class="description">
                       <p><%= post.text %></p>
                   </div>
                   <a  class="ui blue basic button" href="/blogs/<%= post._id %>/edit">Редактировать</a>
                   <form id="delete" action="/blogs/<%= post._id %>?_method=DELETE" method="POST">
                       <button class="ui red basic button">Удалить</button>
                   </form>
                </div>
            </div>
    </div>

<% include ./partials/footer.ejs %>

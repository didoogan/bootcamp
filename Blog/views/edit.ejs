<% include ./partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header">Редактировать пост</div>
    <form class="ui form" action="/blogs/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Заголовок</label>
            <input type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="field">
            <label>Изображение</label>
            <input type="text" name="post[image]" value="<%= post.image %>">
        </div>
        <div class="field">
            <label>Текст</label>
            <textarea name="post[text]" ><%= post.text %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit" value="Обновить">
    </form>
</div>


<% include ./partials/footer.ejs %>
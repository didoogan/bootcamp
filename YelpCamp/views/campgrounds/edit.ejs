<%  include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Редактировать <%= camp.name %></h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Изменит</button>
                </div>
            </form>
            <a href="/campgrounds">Назад</a>
        </div>
        
        

    </div>
</div>
<%  include ../partials/footer %>